extends layout 

block content 
  h1 sign up to members only clubhouse
  form(method='POST' action='')
    div.form-group
      label(for='username') Username: 
      input#username.form-control(type='text', placeholder='Enter New Username', name='username' required)

    div.form-group
      label(for='password') Password: 
      input#password.form-control(type='password', placeholder='Enter New Password', name='password' required)
    
    button.btn.btn-primary(type='submit') Submit

  if error 
    p= error
